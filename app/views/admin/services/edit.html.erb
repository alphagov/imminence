<% content_for :page_title,  "Edit #{@service.name}" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <%= render "govuk_publishing_components/components/heading", {
      text:  "Edit #{@service.name}",
      heading_level: 1,
      font_size: "l",
      margin_bottom: 5,
    } %>

    <% if @form_errors %>
      <%= render "govuk_publishing_components/components/error_summary", title: "Unable to edit service",  items: @form_errors %>
    <% end %>

    <%= form_for(@service, url: admin_service_path(@service)) do |f| %>
      <%= render partial: "form_fields", locals: { f: f } %>
    <% end %>

  </div>
</div>
