<% content_for :page_title,  "Add new service" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <%= render "govuk_publishing_components/components/heading", {
      text:  "Add new service",
      heading_level: 1,
      font_size: "l",
      margin_bottom: 5,
    } %>

    <% if @form_errors %>
      <%= render "govuk_publishing_components/components/error_summary", title: "Unable to create new service", items: @form_errors %>
    <% end %>

    <%= form_for(@service, multipart: true, url: admin_services_path, html: {class: "well"}) do |f| %>
      <%= render partial: "form_fields", locals: { f: f } %>
    <% end %>

  </div>
</div>
