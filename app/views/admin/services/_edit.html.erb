<%= semantic_form_for(@service, :url => admin_service_path(@service), :multipart => true) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :slug %>
    <%= f.input :source_of_data, as: :text, hint: "Use to store relevant contact names, email addresses, etc.", input_html: { class: 'span6' } %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button "Update Service", :button_html => {:class => 'btn btn-primary'} %>
  <% end %>
<% end %>
