<section class="container-fluid" role="main">
  <div class="row-fluid">
  <div class="span12">

    <div class="page-header">
      <h1>
        All Services
      </h1>

      <div class="format-controls">
        <%= button_to 'Add new service', new_admin_service_path, :method=>:get, :class => 'service btn btn-primary activate' %>
      </div>
    </div>

    <div class="row-fluid">

      <table class="table table-striped table-bordered table-condensed" summary="Full list of available services">
        <thead>
          <tr>
            <th scope="col">Service Title</th>
            <th scope="col">Review</th>
            <th scope="col">Upload</th>
          </tr>
        </thead>
        <tbody>
          <%= render :collection => @services, :partial => 'service', :locals => {:tab => :drafts} %>
        </tbody>
      </table>

    </div>
  </div>
</section>
<% content_for :page_title, "Services List" %>
