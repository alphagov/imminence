<section class="container-fluid" role="main">
  <div class="row-fluid">
  <div class="span12">

    <div class="page-header">
      <h1>
        All business supports 
      </h1>

      <div class="format-controls">
        <%= link_to "New Business Support", new_admin_business_support_scheme_path, :class => 'btn btn-primary' %>
        <%= link_to "Export as CSV", {:format => :csv}, :class => 'btn' %>
      </div>
    </div>

    <div class="row-fluid">

      <table class="table table-striped table-bordered table-condensed" summary="Full list of available services">
        <thead>
          <tr>
            <th scope="col">Identifier</th>
            <th scope="col">Title</th>
            <th scope="col">Priority</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
        <% @schemes.each do |scheme| -%>
          <tr>
            <td><%= scheme.business_support_identifier %></td>
            <td><%= scheme.title %></td>
            <td><%= priority_label(scheme.priority) %></td>
            <td><%= link_to 'Edit', edit_admin_business_support_scheme_path(scheme), :class => 'btn btn-success' %></td>
            <td><%= button_to 'Delete', admin_business_support_scheme_path(scheme), :method => :delete,
                      :confirm => "Permanently delete this scheme?", :class => 'btn btn-danger' %></td>
          </tr> 
        <% end -%>  
        </tbody>
      </table>

      <%= link_to "New Business Support", new_admin_business_support_scheme_path, :class => 'btn btn-primary' %>

    </div>
  </div>
</section>
<% content_for :page_title, "Business Support List" %>
