<div class="control-group">
  <h3><%= title %></h3>
  <label for="business_support_<%= title.downcase.singularize %>_check_all" class="checkbox inline">
    <%= check_box_tag "business_support_#{title.downcase.singularize}_check_all" %>All
  </label>
  <% collection.each do |facet| -%>
    <label for="business_support_scheme[<%= model_collection %>][]" class="checkbox inline">
    <%= f.check_box model_collection, { :multiple => true }, facet._id, nil %>
    <%= facet.name %>
  </label>
  <% end %>
</div>
